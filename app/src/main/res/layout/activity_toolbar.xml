<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--给ToolBar单独设置主题-->
    <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
    <!--给ToolBar上弹出的Window设置主题-->
    <!--app:popupTheme="@style/Theme.AppCompat.Light"-->
    <!--设置背景颜色-->
    <!--android:background="?attr/colorPrimary"-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@mipmap/ic_launcher_round"
        app:navigationContentDescription="我的导航栏的描述"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:collapseIcon="@mipmap/ic_launcher"
        app:collapseContentDescription="折叠内容的描述"
        app:logo="@mipmap/ic_launcher_round"
        app:logoDescription="我是logo的描述"
        app:subtitleTextAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:subtitle="子标题"
        app:subtitleTextColor="@color/colorAccent"/>
</LinearLayout>
